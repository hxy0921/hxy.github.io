.index{
  width: 100%;  
}
.search{
  width: 100%;  
  margin-top: 40rpx;
  input{
    width: 680rpx;
    height: 80rpx;
    border: 2px solid #eee;
    margin-left: 25rpx;
    border-radius: 40px;
    padding-left: 20px;
  }
}

.faceList{
  padding-left: 40rpx;
  margin-top: 30rpx;  
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  .face{
    width: 200rpx;
    text-align: left;
    margin-right: 35rpx;
    image{
      width: 200rpx;
      height: 200rpx;
      border-radius: 4rpx;
    }
    text{
      height: 80rpx;
      text-overflow: -o-ellipsis-lastline;
      overflow: hidden;
      text-overflow: ellipsis;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      line-clamp: 2;
      -webkit-box-orient: vertical;
      font-size: 24rpx;
    }
  }
}

.uploadingBtn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 150rpx;
  right: 50rpx;
  image{
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
  }  
}